<div class="container container__auth">
  <h2 class="title__auth">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input__auth' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn-success' %>
    </div>
  <% end %>

  <div class="shared-links-container">
    <%= render "devise/shared/links" %>
  </div>
</div>
