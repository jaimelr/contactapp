<div class="container contacts-container">
  <p id="notice"><%= notice %></p>

  <h1><%= t('contacts.title') %></h1>

  <table class="container data-container__contacts">
    <thead>
      <tr class="data-header__contacts">
        <th><%= t('contacts.form.name' )%></th>
        <th><%= t('contacts.form.last_name') %></th>
        <th><%= t('contacts.form.phone') %></th>
        <th><%= t('contacts.form.company') %></th>
        <th><%= t('contacts.form.email') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr class="data-body__contacts">
          <td><%= contact.name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.company %></td>
          <td><%= contact.email %></td>
          <td><%= link_to 'Show', contact, class: 'btn-info' %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), class: 'btn-warning' %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('contacts.new_contact'), new_contact_path, class: 'btn-success' %>
</div>
